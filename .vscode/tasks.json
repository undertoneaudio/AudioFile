{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${command:cmake.buildDirectory}"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${command:cmake.buildDirectory}",
                "--config",
                "Debug"
            ],
            "group": "build",
            "dependsOn": "CMake: configure",
            "problemMatcher": []
        },
        {
            "label": "Build Tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${command:cmake.buildDirectory}",
                "--config",
                "Debug",
                "--target",
                "Tests"
            ],
            "group": "build",
            "dependsOn": "CMake: configure",
            "problemMatcher": []
        },
        {
            "label": "Build Examples",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${command:cmake.buildDirectory}",
                "--config",
                "Debug",
                "--target",
                "Examples"
            ],
            "group": "build",
            "dependsOn": "CMake: configure",
            "problemMatcher": []
        }
    ]
}